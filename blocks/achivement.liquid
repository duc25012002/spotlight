<div class="achievement-container">
  <div class="achievement-item">
    <div>{{ block.settings['number-brand'] }}</div>
    <div>{{ block.settings['text-brand'] }}</div>
  </div>

  <div class="achievement-item">
    <div>{{ block.settings['number-quality'] }}</div>
    <div>{{ block.settings['text-quality'] }}</div>
  </div>

  <div class="achievement-item">
    <div>{{ block.settings['number-customer'] }}</div>
