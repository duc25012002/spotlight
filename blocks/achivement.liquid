<style>
  .achievement-item > div:first-child {
    font-weight: bold;
    font-size: 3rem;
  }
  .achievement-container {
    display: flex;
    flex-direction: row;
    gap: 3em;
  }
  .achievement-item {
    display: flex;
    justify-content: start;
    align-items: start;
    flex-direction: column;
  }
</style>

